{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@ui/*": ["ui/*"],
      "@config/*": ["config/*"],
      "@render/*": ["render/*"],
      "@audio/*": ["audio/*"],
      "@net/*": ["net/*"]
    }
  },
  "include": ["src", "tests"]
}
